<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/back"
        android:layout_height="match_parent"
        tools:context=".PROFILE.ProfileActivity">


        <LinearLayout
            android:paddingBottom="50dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/shadow"
                android:paddingBottom="32dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <View
                        android:layout_width="match_parent"
                        android:background="@color/darkBlue"
                        android:layout_height="130dp"/>



                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="55dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/tof"
                            android:layout_width="130dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:scaleType="centerCrop"
                            android:layout_height="130dp"
                            android:background="@color/back"/>

                        <ImageView
                            android:layout_width="65dp"
                            android:scaleType="centerCrop"
                            android:layout_height="65dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:src="@drawable/top_start"/>
                        <ImageView
                            android:scaleType="centerCrop"
                            android:layout_width="65dp"
                            android:layout_height="75dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:src="@drawable/top_end"/>
                        <ImageView
                            android:layout_width="65dp"
                            android:scaleType="centerCrop"
                            android:layout_height="65dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:src="@drawable/buttom_start"/>

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:scaleType="centerCrop"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:src="@drawable/buttom_end"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>



                    <ImageView
                        android:layout_width="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="16dp"
                        android:id="@+id/edit_profil"
                        android:padding="10dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_setting"/>



                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Mehdi Ayeb"
                    android:id="@+id/name_prof"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textColor="#212121"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16sp"
                    android:textSize="30sp"/>

                <TextView
                    android:textColor="#9E9E9E"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email_prof"
                    tools:text="mehdiayeb14@gmail.com"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14sp"
                    />


            </LinearLayout>

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:layout_margin="8dp"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:text="KIDS"
                android:id="@+id/kids_tex"
                android:textStyle="bold"
                android:background="@drawable/shadow_button"
                android:padding="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:padding="8dp"
                android:id="@+id/rec_kids"
                android:layout_height="wrap_content"/>

        </LinearLayout>




    </ScrollView>
</layout>
