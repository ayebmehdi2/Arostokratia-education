<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/child"
        android:layout_height="match_parent"
        android:background="@color/back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/desc_kid"
            android:textSize="35sp"
            android:layout_marginTop="64dp"
            android:textColor="@color/darkBlue"
            android:text="Edit profile"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="64dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginStart="16dp"
                android:layout_width="80dp"
                android:id="@+id/img"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_add"
                android:layout_height="80dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"
                android:text="choose photo profile"/>

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="16dp"
            android:id="@+id/kid_name"
            android:paddingEnd="16dp"
            android:hint="Change name"
            android:layout_marginTop="32dp"
            android:background="@drawable/shadow_edit_text"
            android:layout_height="55dp" />


        <Button
            android:background="@drawable/shadow_button"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:text="Add kid"
            android:id="@+id/add_kid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/out"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginStart="16sp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shadow_red"
                android:text="Logout"
                android:textColor="#FFF"
                android:textSize="18sp" />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/apply"
                android:layout_gravity="end"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/shadow_button"
                android:text="Apply"
                android:textColor="#FFF"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</layout>